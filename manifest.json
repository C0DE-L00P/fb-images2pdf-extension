{
  "manifest_version": 3,
  "name": "FB Image to PDF",
  "version": "1.0",
  "description": "Downloads Facebook images and converts them to PDF",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.fbcdn.net/*",
    "*://*.facebook.com/*"
  ],
  "action": {
    "default_title": "FB Image to PDF"
  },
  "background": {
    "service_worker": "background.js"
  }
} 