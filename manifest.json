{
  "manifest_version": 3,
  "name": "FB Image to PDF",
  "version": "1.0",
  "description": "Collects Facebook images and converts them to PDF",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.fbcdn.net/*"
  ],
  "action": {
    "default_title": "FB Image to PDF"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["html2pdf.bundle.min.js", "content.js"]
    }
  ]
} 