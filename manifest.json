{
  "manifest_version": 3,
  "name": "FB Image Saver",
  "version": "1.0",
  "description": "Automatically saves Facebook images and navigates through them",
  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],
  "action": {
    "default_title": "FB Image Saver"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["content.js"]
    }
  ]
} 